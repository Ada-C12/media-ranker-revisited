<section class="category_link">
<a name="Albums"><a href="#Albums">Albums</a><a href="#Books">Books</a><a href="#Movies">Movies</a></a>
</section>
<h1>Albums</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Votes</th>
      <th scope="col">Category</th>
      <th scope="col">Title</th>
      <th scope="col">Created By</th>
      <th scope="col">Published</th>
      <th scope="col">Upvote</th>
    </tr>
  </thead>
  <tbody>
  <% @works.where(category: "album").each do |work| %>
    <tr> 
      <td><%= work.total_votes %></td>
      <td><%= (work.category).capitalize %></td>
      <td><%= link_to work.title, work_path(work) %></td>
      <td><%= work.creator %></td>
      <td><%= work.publication_year %></td>
      <td><%= link_to '<button type="button" class="btn btn-primary">Upvote</button>'.html_safe, vote_path(work.id), method: :post %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br />
